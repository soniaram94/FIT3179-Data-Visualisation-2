{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Assistance by activity â€” stacked horizontal bars.",
  "width": "container",
  "height": { "step": 22 },

  "autosize": { "type": "fit", "contains": "padding" },
  "padding": { "left": 20, "right": 20, "top": 6, "bottom": 28 },

  "data": {
    "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/main/data/assistance_by_activity_core.csv"
  },

  "mark": { "type": "bar" },

  "encoding": {
    "y": {
      "field": "activity", "type": "nominal", "sort": "-x", "title": null,
      "axis": { "labelLimit": 180, "labelAlign": "right", "labelPadding": 6 }
    },
    "x": {
      "field": "estimate_k", "type": "quantitative", "stack": "zero",
      "axis": { "title": "People ('000)" }
    },
    "color": {
      "field": "category", "type": "nominal",
      "scale": {
        "domain": ["Profound", "Severe", "Moderate"],
        "range":  ["#2fbdc2", "#2bd6a0", "#26dc7e"]
      },
      "legend": {
        "title": "Disability level",
        "orient": "top",                 
        "direction": "horizontal",
        "columns": 3,
        "labelFontSize": 10,
        "titleFontSize": 11,
        "symbolSize": 90
      }
    },
    "order": { "field": "category", "type": "nominal",
               "sort": ["Profound", "Severe", "Moderate"] },
    "tooltip": [
      { "field": "activity", "title": "Activity" },
      { "field": "category", "title": "Level" },
      { "field": "estimate_k", "title": "People ('000)", "format": ",.1f" }
    ]
  },

  "config": {
    "view": { "stroke": null },
    "axis": { "labelFontSize": 10, "titleFontSize": 11 }
  }
}
