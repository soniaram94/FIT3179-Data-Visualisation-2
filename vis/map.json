{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 650,
  "background": "#c7e9ff",
  "projection": {
    "type": "mercator",
    "center": [133, -28],
    "scale": 920
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/refs/heads/main/data/australia_states.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/refs/heads/main/data/disability%20_discrimination.csv"
            },
            "key": "State",
            "fields": ["Discrimination_thousands"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 4},
      "encoding": {
        "color": {
          "field": "Discrimination_thousands",
          "type": "quantitative",
          "title": "Discrimination ('000)"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Discrimination_thousands", "title": "Discrimination ('000)"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [10, 10]}},
      "mark": {"type": "geoshape", "stroke": "#c5c5c5", "strokeWidth": 1, "fill": null}
    }
  ]
}