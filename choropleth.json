{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Experienced discrimination ('000) â€” by Australian state",
  "width": 900,
  "height": 600,

  "projection": {
    "type": "mercator",
    "center": [133, -28],   
    "scale": 900            
  },


  "layer": [
    {
      "data": { "graticule": { "step": [10, 10], "extent": [[110, -45], [155, -8]] } }, 
      "mark": { "type": "geoshape", "fill": null, "stroke": "#cccccc", "strokeWidth": 0.6, "clip": true }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/refs/heads/main/aus_states.json",
        "format": {"type": "topojson", "feature": "STE_2016_AUST"}
      },
      "mark": { "type": "geoshape", "fill": "#f7f7f7", "stroke": "white", "strokeWidth": 0.8 }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/refs/heads/main/disability%20_discrimination.csv",
        "format": {"type": "topojson", "feature": "STE_2016_AUST"}
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME16",
          "from": {
            "data": { "url": "https://raw.githubusercontent.com/soniaram94/FIT3179-Data-Visualisation-2/refs/heads/main/disability%20_discrimination.csv" },  
            "key": "State",
            "fields": ["Discrimination_thousands"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.8 },
      "encoding": {
        "color": {
          "field": "Discrimination_thousands",
          "type": "quantitative",
          "title": "('000 people)",
          "scale": {
            "type": "threshold",
            "domain": [5, 15, 35, 60, 90, 110],
            "range": ["#f7fbff","#deebf7","#c6dbef","#9ecae1","#6baed6","#3182bd","#08519c"]
          }
        },
        "tooltip": [
          { "field": "properties.STE_NAME16", "type": "nominal", "title": "State" },
          { "field": "Discrimination_thousands", "type": "quantitative", "format": ".1f", "title": "Experienced ('000)" }
        ]
      }
    }
  ]
}
